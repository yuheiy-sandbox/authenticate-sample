extends _layout

block content
  h1 login

  each message in error
    p(style='color: red;')= message

  form(method='post', action='/login')
    p
      label
        | username
        br
        input(type='text', name='username')
    p
      label
        | password
        br
        input(type='password', name='password')
    p
      button(type='submit') login
